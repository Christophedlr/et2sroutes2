{% extends 'layout.html.twig' %}

{% set title = "Dashboard de l'adminstration" %}

{% set breadcrumb = [
    {'name': 'Administration'}
] %}

{% block title %}Administration{% endblock %}

{% block body %}
    {% set card=1 %}

    {% for bundle in bundles %}
        <article class="col-md-6 col-lg-3 {% if card>4 %}{% set card=1 %}mt-4{% endif %}">
            <section class="card">
                <div class="card-header">
                    <div class="d-flex">
                        <div class="ml-auto octicon octicon-size-medium {% if bundle.octicon is not null %}{{ bundle.octicon }}{% endif %}">
                            &nbsp;
                        </div>
                        <div class="mr-auto align-self-center">&nbsp;{{ bundle.name }}</div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="text-center">version {{ bundle.version }}</p>
                    <p class="card-text">{{ bundle.description }}</p>
                    <p class="text-center"><a href="{{ pathab(bundle.path) }}" class="btn btn-primary">Administrer</a></p>
                </div>
            </section>
        </article>

        {% set card = card+1 %}
    {% endfor %}
{% endblock %}
