{% extends 'layout.html.twig' %}

{% set title = 'Contacter l\'administrateur' %}

{% set breadcrumb = [
    {'name': 'Contact'}
] %}

{% block title %}Contact{% endblock %}

{% block body %}
    <form action="{{ pathab('contact') }}" method="POST">
        <div class="form-group">
            <label for="mail">E-mail :</label>
            <input type="text" id="mail" maxlength="50"
                   name="form[mail]" class="form-control {% if errors.mail is defined %} is-invalid {% endif %}"
                   value="{% if form.mail is defined %}{{ form.mail }}{% endif %}" required>
            {% for error in errors.mail %}
                <div class="invalid-feedback">{{ error }}</div>
            {% endfor %}
        </div>

        <div class="form-group">
            <label for="object">Objet :</label>
            <input type="text" id="object" maxlength="100"
                   name="form[object]" class="form-control {% if errors.object is defined %} is-invalid {% endif %}"
                   value="{% if form.object is defined %}{{ form.object }}{% endif %}" required>
            {% for error in errors.object %}
                <div class="invalid-feedback">{{ error }}</div>
            {% endfor %}
        </div>

        <div class="form-group">
            <label for="mail">Message :</label>
            <textarea name="form[message]" class="form-control" id="message" rows="10" required>{{ form.message }}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
{% endblock %}
